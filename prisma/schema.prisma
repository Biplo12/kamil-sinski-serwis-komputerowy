generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "mongodb"
  url = env("DATABASE_URL")
  relationMode = "prisma"
}

model Orders {
  id          String   @id @default(cuid()) @map("_id")
  email       String
  status      String
  message     String
  statusMessage String
  createdAt   DateTime @default(now())
  repairingAt String?
  repairedAt  String?
  updatedAt   DateTime @updatedAt
}

model Users {
  id          String   @id @default(cuid()) @map("_id")
  email       String
  password    String
  isAdmin     Boolean
  name        String
  surname     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
